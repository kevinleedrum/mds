html, body, #app, .theme-container.no-sidebar
  height: 100%;
  min-height: 100%;

*
  box-sizing: border-box;

body
  background: #f9f9f9;
  font-family: 'Roboto', sans-serif;
  font-size: 1rem;

.theme-container.no-sidebar
  background: linear-gradient(180deg, #f9f9f9 25%, var(--mds-bg-primary));
  .theme-default-content
    padding-bottom: 0;

h1, h2, h3, h4, h5, h6
  font-weight 500

.sidebar
  & > .sidebar-links
    & > li > a.sidebar-link
      font-weight 500 !important

p
  margin: 20px 0;

// Override theme's a:hover rule since it has higher specificity than ".mds .hover:no-underline"
.theme-default-content:not(.custom) a:hover
  text-decoration: none;
// Restore underline for a:hover that is not inside a .mds container
.theme-default-content:not(.custom) a:hover:not(.mds a)
  text-decoration: underline;

.front
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
