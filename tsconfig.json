{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "lib": ["dom", "es2017"]
    },
    "exclude": ["node_modules"]
  }